@model ShopTC.Models.ThuCung

@{
    ViewBag.Title = "Delete";
    string gtinh = "";
}

<h4 style="color:red;"> Bạn có chắc chắn xóa thông tin này?</h4>
<table border="0" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>
                    <td rowspan="8"><img src="/Images/@Html.DisplayFor(model => model.HinhAnhMH)" width="100" height="100" /></td>
                    <td>Mã thú cưng:</td>
                    <td>@Html.DisplayFor(model => model.MaTC)</td>
                </tr>
                <tr>
                    <td>Tên thú cưng:</td>
                    <td>@Html.DisplayFor(model => model.TenTC)</td>
                </tr>
                <tr>
                    <td>Giá:</td>
                    <td>@Html.DisplayFor(model => model.GiaTC)</td>
                </tr>
                <tr>
                    <td>Số lượng:</td>
                    <td>@Html.DisplayFor(model => model.GiaTC)</td>
                </tr>
                <tr>
                    <td>Giới tính:</td>
                    <td>
                        @{if (Model.GT == true)
                            { gtinh = "Đực"; }
                            else
                            { gtinh = "Cái"; }
                        }
                        @gtinh
                    </td>
                </tr>
                <tr>
                    <td>Mô tả:</td>
                    <td>@Html.DisplayFor(model => model.MoTa)</td>
                </tr>
                <tr>
                    <td>Ngày sinh:</td>
                    <td>@Html.DisplayFor(model => model.NgaySinh)</td>
                </tr>
                <tr>
                    <td>Loại:</td>
                    <td>@Html.DisplayFor(model => model.LoaiThuCung.TenLoai)</td>
                </tr>
                <tr>
                    <td>Nhà cung cấp:</td>
                    <td>@Html.DisplayFor(model => model.NHACC.TenCC)</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="margin-left:50px;">
        <input type="submit" value="Xóa" class="btn btn-default" /> |
        @Html.ActionLink("Quay lại", "Index")
    </div>
}
